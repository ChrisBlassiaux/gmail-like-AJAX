<div class="container">

    <div class="text-center">
      <h2>Your email</h2>
    </div>

    <div class="row mt-5">
      <% email = Email.find_by(id:params[:id]) %>
       <div class="col-12">
          <h4>Email</h4>
          <div class="card">
            <div class="card-header">
              <strong>Object : </strong> <%= email.object %>
            </div>
            <div class="card-body">
              <p class="card-text"><%= email.body %></p>
            </div>
          </div> 
      </div>
    </div> 

    <footer class="mt-5 pt-5 text-muted text-center text-small">
      <p class="mb-1">&copy; 2017-2020 ChrisBlassiaux</p>
      <ul class="list-inline">
        <li class="list-inline-item"><a href="https://github.com/ChrisBlassiaux">Github</a></li>
        <li class="list-inline-item"><a href="https://www.instagram.com/chris.blassiaux/?hl=fr">Instagram</a></li>
        <li class="list-inline-item"><a href="http://chrisb.fr/">SiteWeb</a></li>
      </ul>
    </footer>
  </div>
</div>